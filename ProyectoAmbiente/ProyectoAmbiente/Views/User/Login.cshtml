@{
    ViewData["Title"] = "Iniciar Sesión";
}

<!-- MAIN CONTENT -->
<main>
    <div class="container">
        <div class="card login-card" style="background-color: var(--neutral-800); box-shadow: var(--shadow-lg);">
            <div class="card-header" style="border-bottom: 1px solid var(--neutral-700); color: var(--neutral-100);">
                Iniciar Sesión
            </div>
            <div class="card-body" style="color: var(--neutral-200);">
                <h2 class="card-title">Bienvenido de nuevo</h2>

                <div class="alert" style="margin-bottom: var(--spacing-md); border-radius: var(--border-radius-sm); border-left: 4px solid var(--info-color); background-color: rgba(52, 152, 219, 0.1); color: var(--info-color);">
                    <strong>Nota:</strong> Todos tus documentos están seguros y esperándote.
                </div>

                @if (!ViewData.ModelState.IsValid && ViewData.ModelState[""].Errors.Count > 0)
                {
                    <div class="alert" style="margin-bottom: var(--spacing-md); border-radius: var(--border-radius-sm); border-left: 4px solid var(--danger-color); background-color: rgba(231, 76, 60, 0.1); color: var(--danger-color);">
                        @foreach (var error in ViewData.ModelState[""].Errors)
                        {
                            <p>@error.ErrorMessage</p>
                        }
                    </div>
                }

                <form asp-controller="User" asp-action="Login" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label class="form-label" style="color: var(--neutral-300);">Correo Electrónico</label>
                        <input type="email" name="email" class="form-control" placeholder="ejemplo@correo.com" style="background-color: var(--neutral-700); border-color: var(--neutral-600); color: var(--neutral-200);" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label" style="color: var(--neutral-300);">Contraseña</label>
                        <input type="password" name="password" class="form-control" placeholder="Tu contraseña" style="background-color: var(--neutral-700); border-color: var(--neutral-600); color: var(--neutral-200);" required>
                    </div>

                    <div class="action-center">
                        <div>
                            <a href="#" style="color: var(--primary-color); text-decoration: none; font-size: var(--font-size-sm);">¿Olvidaste tu contraseña?</a>
                        </div>
                        <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                    </div>
                </form>
            </div>
            <div class="card-footer" style="background-color: var(--neutral-700); border-top: 1px solid var(--neutral-600); text-align: center;">
                <span style="color: var(--neutral-300);">¿No tienes una cuenta?</span>
                <a asp-controller="User" asp-action="Register" class="btn btn-outline" style="margin-left: var(--spacing-sm); color: var(--neutral-100); border-color: var(--neutral-600);">Registrarse</a>
            </div>
        </div>
    </div>
</main>