@{
    ViewData["Title"] = "Home Page";
}


<!-- MAIN CONTENT -->
<main style="padding: var(--spacing-xl); display: flex; justify-content: center; align-items: center; min-height: calc(100vh - 200px);">
    <div class="card" style="max-width: 600px; width: 100%;">
        <div class="card-header">
            Gestiona tus documentos PDF
        </div>
        <div class="card-body">
            <h2 style="font-size: var(--font-size-2xl); margin-bottom: var(--spacing-md);">Bienvenido a PDF Manager</h2>
            <p style="margin-bottom: var(--spacing-lg);">
                Una herramienta simple para gestionar, organizar y compartir tus archivos PDF de manera segura.
                Sube tus documentos y accede a ellos desde cualquier dispositivo.
            </p>
            <div class="alert alert-info">
                <strong>Consejo:</strong> Puedes subir múltiples archivos a la vez arrastrándolos a la zona de carga.
            </div>
            <div class="card-body">
                <h1>Una manera sencilla de gestionar tus PDFs.</h1>
            </div>

            <div style="margin-top: var(--spacing-lg); text-align: center;">
                <button class="btn btn-primary">Añadir Archivos</button>
            </div>
        </div>
        <div class="card-footer">
            <span class="badge badge-primary">útil</span>
            <span class="badge badge-secondary">Rápido</span>
            <span class="badge badge-neutral">Fácil de usar</span>
        </div>
    </div>
</main>
