        // Función para verificar la precisión de la transcripción
        function verificarPrecisionTranscripcion(textoUsuario) {
            if (!paginaActualTexto || !comparacionActiva) return;

            // Obtener los últimos caracteres escritos por el usuario
            const ultimosCaracteres = textoUsuario.substring(Math.max(0, textoUsuario.length - 100));

