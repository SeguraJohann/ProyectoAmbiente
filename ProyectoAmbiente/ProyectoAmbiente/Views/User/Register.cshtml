@model ProyectoAmbiente.Models.Usuario
@{
    ViewData["Title"] = "Registrarse";
}

<!-- MAIN CONTENT -->
<main>
    <div class="container">
        <div class="card login-card" style="background-color: var(--neutral-800); box-shadow: var(--shadow-lg);">
            <div class="card-header" style="border-bottom: 1px solid var(--neutral-700); color: var(--neutral-100);">
                Registrarse
            </div>
            <div class="card-body" style="color: var(--neutral-200);">
                <h2 class="card-title">Crea tu cuenta</h2>

                <div class="alert" style="margin-bottom: var(--spacing-md); border-radius: var(--border-radius-sm); border-left: 4px solid var(--success-color); background-color: rgba(46, 204, 113, 0.1); color: var(--success-color);">
                    <strong>Bienvenido:</strong> Únete a PDF Manager y comienza a gestionar tus documentos.
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert" style="margin-bottom: var(--spacing-md); border-radius: var(--border-radius-sm); border-left: 4px solid var(--danger-color); background-color: rgba(231, 76, 60, 0.1); color: var(--danger-color);">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                }

                <form asp-controller="User" asp-action="Register" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label asp-for="Nombre" class="form-label" style="color: var(--neutral-300);">Nombre</label>
                        <input asp-for="Nombre" type="text" class="form-control" placeholder="Tu nombre completo" style="background-color: var(--neutral-700); border-color: var(--neutral-600); color: var(--neutral-200);" required>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="form-label" style="color: var(--neutral-300);">Correo Electrónico</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="ejemplo@correo.com" style="background-color: var(--neutral-700); border-color: var(--neutral-600); color: var(--neutral-200);" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="form-label" style="color: var(--neutral-300);">Contraseña</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Crea una contraseña segura" style="background-color: var(--neutral-700); border-color: var(--neutral-600); color: var(--neutral-200);" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <small style="color: var(--neutral-400);">Mínimo 8 caracteres, debe incluir letras y números</small>
                    </div>

                    <div class="form-group">
                        <label for="confirmarPassword" class="form-label" style="color: var(--neutral-300);">Confirmar Contraseña</label>
                        <input type="password" name="confirmarPassword" class="form-control" placeholder="Repite tu contraseña" style="background-color: var(--neutral-700); border-color: var(--neutral-600); color: var(--neutral-200);" required>
                    </div>

                    <div class="action-center">
                        <button type="submit" class="btn btn-primary">Registrarse</button>
                    </div>
                </form>
            </div>
            <div class="card-footer" style="background-color: var(--neutral-700); border-top: 1px solid var(--neutral-600); text-align: center;">
                <span style="color: var(--neutral-300);">¿Ya tienes una cuenta?</span>
                <a asp-controller="User" asp-action="Login" class="btn btn-outline" style="margin-left: var(--spacing-sm); color: var(--neutral-100); border-color: var(--neutral-600);">Iniciar Sesión</a>
            </div>
        </div>
    </div>
</main>