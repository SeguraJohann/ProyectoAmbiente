                }

                return;
            }

            // Calcular precisión comparando textos
            let coincidencias = 0;
            const longitudMin = Math.min(ultimosCaracteres.length, textoCorrectoPDF.length);

            for (let i = 0; i < longitudMin; i++) {
                if (ultimosCaracteres[i] === textoCorrectoPDF[i]) {
                    coincidencias++;
                }
            }

            const precision = Math.round((coincidencias / longitudMin) * 100);

            // Actualizar color del contenedor según precisión
            if (contenedorTexto) {
                if (precision > 90) {
                    contenedorTexto.style.backgroundColor = 'rgba(40, 167, 69, 0.2)'; // Verde con opacidad
                    contenedorTexto.style.borderColor = 'var(--success-color)';
                } else if (precision > 70) {
                    contenedorTexto.style.backgroundColor = 'rgba(255, 193, 7, 0.2)'; // Amarillo con opacidad
                    contenedorTexto.style.borderColor = 'var(--warning-color)';
                } else {
                    contenedorTexto.style.backgroundColor = 'rgba(220, 53, 69, 0.2)'; // Rojo con opacidad
                    contenedorTexto.style.borderColor = 'var(--danger-color)';
                }

                // Restaurar después de unos segundos
                setTimeout(() => {
                    contenedorTexto.style.backgroundColor = 'var(--neutral-700)';
                    contenedorTexto.style.borderColor = 'var(--neutral-600)';
                }, 3000);
            }

            // Si la precisión es alta, actualizar el último índice transcrito
            if (precision > 90) {
                ultimoIndiceTranscrito += longitudMin;
                ultimoFragmentoTranscrito = ultimosCaracteres;

                // Actualizar texto a transcribir
                mostrarTextoATranscribir();

